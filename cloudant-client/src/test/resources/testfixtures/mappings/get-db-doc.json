{
  "request": {
    "method": "GET",
    "urlPattern": "/db/[^/]+"
  },
  "response": {
    "status": 200,
    "jsonBody": {
      "_id": "{{#if request.path.[3]}}{{request.path.[1]}}/{{request.path.[2]}}/{{request.path.[3]}}{{else if request.path.[2]}}{{request.path.[1]}}/{{request.path.[2]}}{{else}}{{request.path.[1]}}{{/if}}",
      "_rev": "1-abc",
      "fields": {
        "hello":"world"
      }
    },
    "transformers": ["response-template"],
    "headers": {
      "Content-Type": "text/plain"
    }
  }
}
